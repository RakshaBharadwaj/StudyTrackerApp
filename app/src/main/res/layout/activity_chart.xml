<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#CBCDCD"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="198dp"
      android:background="#BD1754"
      android:orientation="vertical">


    <TextView
        android:id="@+id/Title_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-medium"
        android:text="Charts"
        android:textColor="#fff"
        android:textSize="28dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="20dp"
        android:background="#C63351" />

  </LinearLayout>
  <LinearLayout
      android:elevation="8dp"
      android:background="@drawable/add_new_tests"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="-97dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:orientation="horizontal">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView


          android:text="Test Title"
          android:textColor="#131e69"
          android:layout_marginBottom="13dp"
          android:textSize="21dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

      </TextView>






      <Spinner
          android:id="@+id/spinner_test_chart"
          android:layout_width="match_parent"
          android:layout_height="47dp"
          android:background="@drawable/bg_input_task_spinner"

          >


      </Spinner>

      <TextView
          android:layout_marginTop="17dp"

          android:text="Subject Title"
          android:textColor="#131e69"
          android:layout_marginBottom="13dp"
          android:textSize="21dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

      </TextView>
      <Spinner
          android:id="@+id/spinner_sub_chart"
          android:layout_width="match_parent"
          android:layout_height="47dp"
          android:background="@drawable/bg_input_task_spinner"

          >


      </Spinner>






    </LinearLayout>







  </LinearLayout>







  <Button
      android:layout_marginTop="10dp"
      android:layout_marginRight="16dp"
      android:layout_marginLeft="16dp"
      android:text="Generate Now"
      android:textColor="#fff"
      android:textAllCaps="false"
      android:textSize="20dp"
      android:elevation="7dp"
      android:background="@drawable/btn_generate"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:id="@+id/btn_generate_charts">

  </Button>

  <LinearLayout
      android:id="@+id/chart_home"
      android:elevation="8dp"
      android:background="@drawable/add_new_tests"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="16dp"
      android:layout_marginRight="16dp"
      android:orientation="horizontal">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">

      <com.github.mikephil.charting.charts.BarChart
          android:id="@+id/barChart"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          />

    </LinearLayout>






  </LinearLayout>


  </LinearLayout>